{
  "manifest_version": 2,
  "name": "Weather Watcher",
  "version": "1.0",
  
  "description": "An extension that watches and displays the current local weather",
  "browser_action": {
    "default_icon": "icons/eye-icon-48.png",
    "default_title": "Weather Watcher",
    "default_popup": "popup.html"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "permissions": [ "geolocation" ]
}